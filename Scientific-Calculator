from tkinter import *
import tkinter.messagebox
import math
root = Tk()
root.geometry("650x400+300+300")
root.title("Scientific Calculator")
switch = None
# Button on press
def btn1_clicked():
    if disp.get() == '0':
        disp.delete(0, END)
    pos = len(disp.get())
    disp.insert(pos, '1')
