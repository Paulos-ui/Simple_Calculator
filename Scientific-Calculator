def key_event(*args):
    if disp.get() == '0':
        disp.delete(0, END)
def btnp_clicked():
    pos = len(disp.get())
    disp.insert(pos, '+')
def btnm_clicked():
    pos = len(disp.get())
    disp.insert(pos, '-')
def btnml_clicked():
    pos = len(disp.get())
    disp.insert(pos, '*')
def btnd_clicked():
    pos = len(disp.get())
    disp.insert(pos, '/')
def btnc_clicked(*args):
    disp.delete(0, END)
    disp.insert(0, '0')
